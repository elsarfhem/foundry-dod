<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <div class="header-fields">
      <div class="resources grid grid-3col">
        <div class="resource flex-group-center">
          <label for="name" class="resource-label">Name</label>
          <h3 class="resource flex-group-center"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
          </h3>
        </div>
        <div class="resource flex-group-center">
          <label for="system.player" class="resource-label">Player</label>
          <h3 class="resource flex-group-center"><input name="system.player" type="text" value="{{system.player}}"
              placeholder="Player" /></h3>
        </div>
        <div class="resource flex-group-center">
          <label for="system.xp" class="resource-label">XP</label>
          <h3 class="resource flex-group-center"><input name="system.xp" type="text" value="{{system.xp}}" placeholder="0" />
          </h3>
        </div>
      </div>
      <div class="header-cards">
        <div class="header-profile">
          <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
          <label for="system.health.value" class="resource-label">Health</label>
          <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number" />
        </div>
        <div class="resources grid grid-6col">
          {{#each system.cards as |card key|}}
            <div class="resource card flex-group-center">
              <img class="card-img manage-sheet-card" src="systems/dod/assets/cards/{{key}}.png" alt="{{key}} card"
                data-card-type="{{key}}">
              <label for="system.cards.{{key}}.value" class="resource-label">{{localize (lookup @root.config.cards key)}}</label>
              <div class="card-input-container">
                <input class="card-input" name="system.cards.{{key}}.value" type="number" value="{{card.value}}" />
                {{#if (ne card.modifier 0)}}
                  <span class="modifier">{{#if (gt card.modifier 0)}}+{{/if}}{{card.modifier}}</span>
                {{/if}}
              </div>
            </div>
          {{/each}}
          <div class="resource card-buttons flex-group-center">
            <button class="card-button draw-cards-from-pile">Draw</button>
            <button class="card-button add-sheet-cards-to-pile">Add to Deck</button>
            <button class="card-button reset-sheet-cards">Reset</button>
          </div>
        </div>
      </div>
