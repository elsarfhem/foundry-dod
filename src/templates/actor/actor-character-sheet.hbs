<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <div class="header-fields">
      <div class="resources grid grid-3col">
        <div class="resource flex-group-center">
          <label for="name" class="resource-label">Name</label>
          <h3 class="resource flex-group-center"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" />
          </h3>
        </div>
        <div class="resource flex-group-center">
          <label for="system.player" class="resource-label">Player</label>
          <h3 class="resource flex-group-center"><input name="system.player" type="text" value="{{system.player}}"
              placeholder="Player" /></h3>
        </div>
        <div class="resource flex-group-center">
          <label for="system.xp" class="resource-label">XP</label>
          <h3 class="resource flex-group-center"><input name="system.xp" type="text" value="{{system.xp}}" placeholder="0" />
          </h3>
        </div>
      </div>
      <div class="header-cards">
        <div class="header-profile">
          <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" />
          <label for="system.health.value" class="resource-label">Health</label>
          <input type="text" name="system.health.value" value="{{system.health.value}}" data-dtype="Number" />
        </div>
        <div class="resources grid grid-6col">
          <div class="resource card flex-group-center">
            <img class="card-img manage-sheet-card" src="systems/dod/assets/cards/success.png" alt="Success Card" data-card-type="success">
            <label for="system.cards.success" class="resource-label">Success</label>
            <input class="card-input" name="system.cards.success" type="number" value="{{system.cards.success}}" />
          </div>
          <div class="resource card flex-group-center">
            <img class="card-img manage-sheet-card" src="systems/dod/assets/cards/failure.png" alt="Failure Card" data-card-type="failure">
            <label for="system.cards.failure" class="resource-label">Failure</label>
            <input class="card-input" name="system.cards.failure" type="number" value="{{system.cards.failure}}" />
          </div>
          <div class="resource card flex-group-center">
            <img class="card-img manage-sheet-card" src="systems/dod/assets/cards/issue.png" alt="Issue Card" data-card-type="issue">
            <label for="system.cards.issue" class="resource-label">Issue</label>
            <input class="card-input" name="system.cards.issue" type="number" value="{{system.cards.issue}}" />
          </div>
          <div class="resource card flex-group-center">
            <img class="card-img manage-sheet-card" src="systems/dod/assets/cards/fortune.png" alt="Fortune Card" data-card-type="fortune">
            <label for="system.cards.fortune" class="resource-label">Fortune</label>
            <input class="card-input" name="system.cards.fortune" type="number" value="{{system.cards.fortune}}" />
          </div>
          <div class="resource card flex-group-center">
            <img class="card-img manage-sheet-card" src="systems/dod/assets/cards/destiny.png" alt="Destiny Card" data-card-type="destiny">
            <label for="system.cards.destiny" class="resource-label">Destiny</label>
            <input class="card-input" name="system.cards.destiny" type="number" value="{{system.cards.destiny}}" />
          </div>
          <div class="resource card-buttons flex-group-center">
            <button class="card-button draw-cards-from-pile">Draw</button>
            <button class="card-button add-sheet-cards-to-pile">Add to Deck</button>
            <button class="card-button reset-sheet-cards">Reset</button>
          </div>
        </div>
      </div>
