  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="core">Core</a>
    <a class="item" data-tab="items">Inventory</a>
    <a class="item" data-tab="description">Background</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Owned Abilities Tab --}}
    <div class="tab core" data-group="primary" data-tab="core">
      <section class="grid grid-12col">
        <aside class="sidebar grid-span-3">

          {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
          use both the "grid" and "grid-Ncol" class where "N" can be any number
          from 1 to 12 and will create that number of columns.  --}}
          <div class="characteristics flexcol">
            <h3>Characteristics</h3>
            {{#each system.characteristics as |characteristic key|}}
            <div class="characteristic flexrow flex-group-center">
              <label for="system.characteristics.{{key}}.value" class="resource-label addable flexlarge align-left" data-label="{{key}}" data-type="characteristic">{{localize (lookup @root.config.characteristics key)}}</label>
              <input type="text" name="system.characteristics.{{key}}.value" value="{{characteristic.value}}" data-dtype="Number"/>
            </div>
            {{/each}}
          </div>
        </aside>

        {{!-- For the main abilities list, span the right two columns --}}
        <section class="abilities grid-span-4">
          <h3>Abilities</h3>
          {{!-- This is a Handlebars partial. They're stored in the `/parts` folder next to this sheet, and defined in module/helpers/templates.mjs --}}
          {{> "systems/dod/src/templates/actor/parts/actor-abilities.hbs"}}
        </section>
        <section class="conditions grid-span-3">
          <h3>Conditions</h3>
          {{> "systems/dod/src/templates/actor/parts/actor-conditions.hbs"}}
        </section>
        <section class="traumas grid-span-2">
          <h3>Traumas</h3>
          {{> "systems/dod/src/templates/actor/parts/actor-traumas.hbs"}}
        </section>

      </section>
    </div>

    {{!-- Owned Items Tab --}}
    <div class="tab items" data-group="primary" data-tab="items">
      {{> "systems/dod/src/templates/actor/parts/actor-items.hbs"}}
    </div>

    {{!-- Background Tab --}}
    <div class="tab biography" data-group="primary" data-tab="description">
      {{!-- Editors must receive enriched text data from getData to properly handle rolls --}}
      {{editor enrichedBiography target="system.biography" engine="prosemirror" button=true editable=editable}}
    </div>

    {{!-- Active Effects Tab --}}
    <div class="tab effects flexcol" data-group="primary" data-tab="effects">
      {{> "systems/dod/src/templates/actor/parts/actor-effects.hbs"}}
    </div>

  </section>
</form>
