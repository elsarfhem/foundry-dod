<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'DECK_OF_DESTINY.labels.name'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize 'DECK_OF_DESTINY.labels.add' type=(localize 'DECK_OF_DESTINY.types.item.ability')}}'
        data-type='ability'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DECK_OF_DESTINY.types.item.ability'}}
      </a>
    </div>
  </li>
  {{#each abilities as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <label for="item.name" class="addable flexlarge align-left" data-label="{{item.name}}" data-type="ability">{{item.name}}</label>
      </div>
      <div class='item-controls'>
        <button class="item-core-button item-click" data-dtype="Number">{{item.system.value}}</button>
        <a
          class='item-control item-edit'
          title='{{localize 'DECK_OF_DESTINY.labels.edit' type=(localize 'DECK_OF_DESTINY.types.item.ability')}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize 'DECK_OF_DESTINY.labels.remove' type=(localize 'DECK_OF_DESTINY.types.item.ability')}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>
