{{!-- Shared item row partial for ability, talent, and inventory item --}}
<li class='item flexrow' data-item-id='{{item._id}}'>
  {{#if item.system.description}}
    <div class="item-tooltip">{{{item.system.description}}}</div>
  {{/if}}
  {{#if (eq item.type 'ability')}}
    <div class='item-name'>
      <div class='item-image'>
        <a class='rollable' data-roll-type='item'>
          <img src='{{item.img}}' alt='{{item.name}}' title='{{item.name}}' width='24' height='24' />
        </a>
      </div>
      <label class='addable flexlarge align-left' data-label='{{item.name}}' data-type='ability'>{{item.name}}</label>
    </div>
    <div class='flex flex-row flex-group-center'>
      <button class='ability-control item-decrease-click' title='{{localize 'DECK_OF_DESTINY.actions.decrease'}}: +{{localize (concat 'DECK_OF_DESTINY.attributes.xp.abilities.' item.system.value)}}'><i class='fas fa-minus'></i></button>
      <span class='ability-value'>{{item.system.value}}</span>
      <button class='ability-control item-increase-click' title='{{localize 'DECK_OF_DESTINY.actions.increase'}}: -{{localize (concat 'DECK_OF_DESTINY.attributes.xp.abilities.' (add item.system.value 1))}}'><i class='fas fa-plus'></i></button>
      <a class='item-control item-chat ml' title='{{localize 'DECK_OF_DESTINY.chat.buttons.showItem'}}'><i class='fas fa-comment-dots'></i></a>
      <a class='item-control item-edit ml mr'><i class='fas fa-edit'></i></a>
      <a class='item-control item-delete'><i class='fas fa-trash'></i></a>
    </div>
  {{else if (eq item.type 'talent')}}
    <div class='item-fixed-name'>
      <div class='item-image'>
        <img src='{{item.img}}' alt='{{item.name}}' title='{{item.name}}' width='24' height='24' />
      </div>
      <label class='flexlarge align-left' data-label='{{item.name}}' data-type='talent'>{{item.name}}</label>
    </div>
    <div class='item-description'>{{simplify item.system.description 100}}</div>
    <div class='item-controls'>
      <button class='item-core-button item-click' data-dtype='Number'>{{item.system.value}}</button>
      <a class='item-control item-chat ml' title='{{localize 'DECK_OF_DESTINY.chat.buttons.showItem'}}'><i class='fas fa-comment-dots'></i></a>
      <a class='item-control item-edit ml mr'><i class='fas fa-edit'></i></a>
      <a class='item-control item-delete'><i class='fas fa-trash'></i></a>
    </div>
  {{else if (eq item.type 'item')}}
    <div class='item-fixed-name'>
      <div class='item-image'>
        <img src='{{item.img}}' alt='{{item.name}}' title='{{item.name}}' width='24' height='24' />
      </div>
      <label class='flexlarge align-left' data-label='{{item.name}}' data-type='item'>{{item.name}}</label>
    </div>
    <div class='item-description'>{{simplify item.system.description 100}}</div>
    <div class='item-quantity'>{{item.system.quantity}}</div>
    <div class='item-controls'>
      <a class='item-control item-chat ml' title='{{localize 'DECK_OF_DESTINY.chat.buttons.showItem'}}'><i class='fas fa-comment-dots'></i></a>
      <a class='item-control item-edit ml mr'><i class='fas fa-edit'></i></a>
      <a class='item-control item-delete'><i class='fas fa-trash'></i></a>
    </div>
  {{else if (eq item.type 'power')}}
    <div class='item-fixed-name'>
      <div class='item-image'>
        <img src='{{item.img}}' alt='{{item.name}}' title='{{item.name}}' width='24' height='24' />
      </div>
      <label class='flexlarge align-left' data-label='{{item.name}}' data-type='power'>{{item.name}}</label>
    </div>
    <div class='item-description'>{{simplify item.system.description 100}}</div>
    <div class='item-controls'>
      <a class='item-control item-chat ml' title='{{localize 'DECK_OF_DESTINY.chat.buttons.showItem'}}'><i class='fas fa-comment-dots'></i></a>
      <a class='item-control item-edit ml mr'><i class='fas fa-edit'></i></a>
      <a class='item-control item-delete'><i class='fas fa-trash'></i></a>
    </div>
  {{/if}}
</li>

