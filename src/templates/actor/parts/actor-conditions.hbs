<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize 'Name'}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='Create item'
        data-type='condition'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type='condition'}}
      </a>
    </div>
  </li>
  {{#each conditions as |item id|}}
    <li class='item flexrow' data-item-id='{{item._id}}'>
      <div class='item-name'>
        <div class='item-image'>
          <a class='rollable' data-roll-type='item'>
            <img
              src='{{item.img}}'
              title='{{item.name}}'
              width='24'
              height='24'
            />
          </a>
        </div>
        <label for="item.name" class="addable flexlarge align-left" data-label="{{item.name}}" data-type="condition">{{item.name}}</label>
      </div>
      <div class='item-controls'>
        <button class="item-core-button" data-dtype="Number">{{item.system.value}}</button>
        <a
          class='item-control item-edit'
          title='{{localize "DOCUMENT.Edit" type='condition'}}'
        >
          <i class='fas fa-edit'></i>
        </a>
        <a
          class='item-control item-delete'
          title='{{localize "DOCUMENT.Delete" type='condition'}}'
        >
          <i class='fas fa-trash'></i>
        </a>
      </div>
    </li>
  {{/each}}
</ol>
